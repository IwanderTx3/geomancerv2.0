        <div class="container">
                    <div>
                        <form action="/login" method="post">
                            <div>
                                <label>Username:</label>
                                <input type="text" name="username"/>
                            </div>
                            <div>
                                <label>Password :</label>
                                <input type="password" name="password"/>
                            </div>
                            <div class='loginbtn'>
                                <input type="submit" value="Submit"/>
                            </div>
                        </form>                  
                    </div>          
        </div>
</div>

</div>
